MATRIX_TELEGRAM_API_HASH=
MATRIX_TELEGRAM_BOT_TOKEN=disabled

MATRIX_TELEGRAM_BRIDGE_USERNAME_TEMPLATE=telegram_{userid}
MATRIX_TELEGRAM_BRIDGE_DISPLAYNAME_TEMPLATE="{displayname} (Telegram)"
MATRIX_TELEGRAM_BRIDGE_STARTUP_SYNC=true
MATRIX_TELEGRAM_BRIDGE_SYNC_DIRECT_CHATS=true
MATRIX_TELEGRAM_BRIDGE_SYNC_CREATE_LIMIT=0

MATRIX_TELEGRAM_BRIDGE_COMMAND_PREFIX="!tg"

MATRIX_TELEGRAM_BRIDGE_BACKFILL_ENABLE=false

MATRIX_TELEGRAM_BRIDGE_PERMISSIONS_USERS=puppeting