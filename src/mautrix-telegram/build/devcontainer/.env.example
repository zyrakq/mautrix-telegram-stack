# Project name for Docker Compose
COMPOSE_PROJECT_NAME=mautrix-telegram

CONTAINER_NAME=mautrix-telegram

# Mautrix Telegram Init

MATRIX_TELEGRAM_HOMESERVER=https://matrix.example.com
MATRIX_TELEGRAM_DOMAIN=matrix.example.com
MATRIX_TELEGRAM_VERIFY_SSL=true

MATRIX_TELEGRAM_APPSERVICE_ADDRESS=https://mautrix-telegram.example.com
MATRIX_TELEGRAM_APPSERVICE_TLS_CERT=/certs/cert.pem
MATRIX_TELEGRAM_APPSERVICE_TLS_KEY=/certs/key.pem

MATRIX_TELEGRAM_APPSERVICE_HOSTNAME=0.0.0.0
MATRIX_TELEGRAM_APPSERVICE_PORT=29317

MATRIX_TELEGRAM_APPSERVICE_DATABASE=sqlite:////data/mautrix-telegram.db

MATRIX_TELEGRAM_APPSERVICE_ID=telegram
MATRIX_TELEGRAM_APPSERVICE_BOT_USERNAME=telegrambot
